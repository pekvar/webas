 @using WebAS.Resources;

@model IEnumerable<WebAS.Models.Location>

@{
    ViewBag.Title = @ViewResource.TitleLocationIndex;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(ViewResource.ActionLinkCreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LocationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Altitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocationId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Altitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink(@Resource.Edit, "Edit", new { id=item.LocationId }) |
            @Html.ActionLink(@Resource.Details, "Details", new { id=item.LocationId }) |
            @Html.ActionLink(@Resource.Delete, "Delete", new { id=item.LocationId })
        </td>
    </tr>
}

</table>
