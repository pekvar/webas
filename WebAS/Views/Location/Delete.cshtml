@using WebAS.Resources;

    @model WebAS.Models.Location

    @{
        ViewBag.Title = ViewResource.TitleLocationDelete;
        ViewBag.BackUrl = Request.UrlReferrer.PathAndQuery;
    }

    <h2>@ViewBag.Title</h2>

    <h3>@ViewResource.H3LocationDelete</h3>
    <div>
        <h4>@ViewResource.H4LocationDelete</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Latitude)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Longitude)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Altitude)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Altitude)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="@ViewResource.ButtonSubmitDelete" class="btn btn-default" /> |
                @{
                    if (ViewBag.BackUrl == "/Location/Map")
                    {
                        @Html.ActionLink(Resource.Back, "Map")
                    }
                    else
                    {
                        @Html.ActionLink(Resource.Back, "Index")
                    }
                }
            </div>
        }
    </div>
