@using WebAS.Resources;

@model WebAS.Models.SendCodeViewModel

@{
    ViewBag.Title = ViewResource.TitleAccountSendCode;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>@ViewResource.H4AccountSendCode</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @ViewResource.H4AccountSendCodeText
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="@ViewResource.ButtonSubmit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
